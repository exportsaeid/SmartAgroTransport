<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- هدر -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- آیکون دایره‌ای -->
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_background"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/local_shipping" />
            </RelativeLayout>

            <!-- عنوان -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حمل و نقل هوشمند کشاورزی"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- زیرعنوان -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:text="لطفاً وارد حساب کاربری خود شوید"
                android:textColor="#808080"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- فرم ورود -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <!-- فیلد نام کاربری -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام کاربری"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:startIconDrawable="@drawable/baseline_person_24"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="نام کاربری را وارد کنید"
                    android:inputType="text"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- فیلد رمز عبور -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رمز عبور"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/baseline_lock_24"
                app:endIconMode="password_toggle"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="رمز عبور را وارد کنید"
                    android:inputType="textPassword"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- بعد از passwordInputLayout -->
            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#d32f2f"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="نام کاربری یا رمز عبور اشتباه است" />

            <!-- لینک فراموشی رمز -->
            <TextView
                android:id="@+id/forgotPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="رمز عبور را فراموش کرده‌اید؟"
                android:textColor="#2196F3"
                android:textSize="14sp" />

            <!-- دکمه ورود -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:text="ورود"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                app:iconPadding="0dp"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- ProgressBar برای حالت لودینگ -->
            <ProgressBar
                android:id="@+id/loginProgressBar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:visibility="gone" />

            <!-- فضای اضافی برای صفحه کلید -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>



